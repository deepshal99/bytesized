{
  "version": 2,
  "builds": [
    {
      "src": "fetchTweets.js",
      "use": "@vercel/node"
    },
    {
      "src": "cron.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "fetchTweets.js"
    }
  ],
  "env": {
    "RETTIWT_API_KEY": "${RETTIWT_API_KEY}",
    "OPENAI_API_KEY": "${OPENAI_API_KEY}",
    "RESEND_API_KEY": "${RESEND_API_KEY}"
  },
  "cron": [
    {
      "path": "/api/newsletter",
      "schedule": "0 0 * * *",
      "timezone": "Asia/Kolkata"
    }
  ]
}